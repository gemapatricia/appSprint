<%- include("header", {}) %>
<h1 id="titulo"><%= title %></h1>
<div class="signupFrm">
  <form id="formReg" action="/registro" method="post">
    <div class="imgcontainer">
      <img src="/images/registro.png" alt="Avatar" class="avatar">
    </div>
    <div class="container">
      <i style='font-size:15px' class='fas'>&#xf2c2;</i>
      <label for="name" form="formReg"><b>Nombre</b>
        <input id="name" class="input" type="text" placeholder="Introduzca su nombre" name="name" required>
      </label>
      <i style='font-size:15px' class='fas'>&#xf2c2;</i>
      <label for="ap1" form="formReg"><b>Primer apellido</b>
        <input id="ap1" class="input" type="text" placeholder="Introduzca su primer apellido" name="ap1" required>
      </label>
      <i style='font-size:15px' class='fas'>&#xf2c2;</i>
      <label for="ap2" form="formReg"><b>Segundo apellido</b>
        <input id="ap2" class="input" type="text" placeholder="Introduzca su segundo apellido" name="ap2">
      </label>
      <i style='font-size:15px' class='fas'>&#xf406;</i>
      <label for="username" form="formReg"><b>Nombre de usuario</b>
        <input id="username" class="input" type="text" placeholder="Introduzca un nombre para su cuenta" name="username" required>
      </label>
      <label for="tipoUsuario">
        <i style='font-size:15px' class='fas'>&#xf406;</i>
        <b>Seleccione un perfil de usuario:</b>
      </label>
      <select id="tipoUsuario" class="input" name="tipoUsuario" form="formReg">
        <option value="estandar">Estándar (usuario gratuito)</option>
        <option value="premium">Premium (usuario de pago)</option>
      </select>
      <i style='font-size:15px' class='fas'>&#xf023;</i>
      <label for="pass1" form="formReg"><b>Contraseña</b>
        <input id="pass1" class="input" type="password" placeholder="Introduzca una contraseña" name="pass1" required>
      </label>
      <i style='font-size:15px' class='fas'>&#xf023;</i>
      <label for="pass2" form="formReg"><b>Repetir contraseña</b>
        <input id="pass2" class="input" type="password" placeholder="Repetir contraseña" name="pass2" required>
      </label>       
      <button id="botonForm" type="submit">Enviar</button>
    </div>
  </form>
</div>

<script src="/javascripts/comprobaciones.js"></script>

<%- include("footer", {}) %>